{
    "injection": {
        "patterns": [
            "SELECT",
            "UNION",
            "DROP",
            "DELETE",
            "UPDATE",
            "INSERT",
            "EXEC",
            "--",
            "/**/",
            "';",
            "' OR '1'='1",
            "' OR '1'='1'--",
            "1' OR '1'='1",
            "OR 1=1",
            "SLEEP(",
            "WAITFOR DELAY",
            "BENCHMARK(",
            "pg_sleep",
            "ORDER BY",
            "GROUP BY"
        ],
        "risk_level": "critical",
        "description": "SQL Injection and other injection attempts",
        "mitigation": "Use prepared statements and input validation"
    },
    "xss": {
        "patterns": [
            "<script>",
            "</script>",
            "javascript:",
            "onerror=",
            "onload=",
            "eval(",
            "alert(",
            "document.cookie",
            "document.location",
            "<img src=x",
            "<iframe",
            "data:text/html",
            "base64",
            "onclick=",
            "onmouseover=",
            "<svg",
            "<body onload=",
            "String.fromCharCode"
        ],
        "risk_level": "high",
        "description": "Cross-site Scripting (XSS) attempts",
        "mitigation": "Encode output and validate input"
    },
    "path_traversal": {
        "patterns": [
            "../",
            "..\\",
            "%2e%2e%2f",
            "%2e%2e/",
            "..%2f",
            "%252e%252e%252f",
            "..%252f",
            "/etc/passwd",
            "c:\\windows\\",
            "file://",
            "/proc/self",
            "/var/log",
            "/.ssh/",
            "/root/",
            "\\windows\\system32"
        ],
        "risk_level": "critical",
        "description": "Directory traversal and file inclusion attempts",
        "mitigation": "Validate file paths and use proper permissions"
    },
    "sensitive_data": {
        "patterns": [
            "password",
            "passwd",
            "pwd",
            "credentials",
            "secret",
            "token",
            "api_key",
            "apikey",
            "ssh-rsa",
            "private_key",
            "id_rsa",
            "aws_access",
            "aws_secret",
            "bearer",
            "authorization:",
            "token=",
            "password=",
            "pass="
        ],
        "risk_level": "high",
        "description": "Attempts to access sensitive data",
        "mitigation": "Properly secure sensitive data and access controls"
    },
    "security_misconfig": {
        "patterns": [
            ".git",
            ".env",
            ".svn",
            ".htaccess",
            "WEB-INF",
            "phpinfo.php",
            "config.php",
            "setup.php",
            "admin.php",
            "install.php",
            "wp-config.php",
            "symfony.lock",
            "composer.json",
            "web.config",
            ".DS_Store",
            "Thumbs.db",
            "robots.txt",
            ".htpasswd"
        ],
        "risk_level": "medium",
        "description": "Security misconfiguration and information disclosure",
        "mitigation": "Properly configure servers and remove unnecessary files"
    },
    "auth_attacks": {
        "patterns": [
            "admin",
            "administrator",
            "root",
            "superuser",
            "login",
            "logon",
            "signin",
            "signup",
            "register",
            "auth",
            "authenticate",
            "forgot",
            "reset",
            "password",
            "bruteforce",
            "admin:admin",
            "guest:guest",
            "test:test"
        ],
        "risk_level": "high",
        "description": "Authentication-related attacks",
        "mitigation": "Implement proper authentication controls and rate limiting"
    },
    "malicious_files": {
        "patterns": [
            ".php",
            ".asp",
            ".aspx",
            ".exe",
            ".jsp",
            ".jspx",
            ".sh",
            ".bash",
            ".dll",
